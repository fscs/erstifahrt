{{#bs-navbar position="fixed-top" backgroundColor="mainnav" type="light" as |navbar|}}
  {{navbar.toggle}}

  {{#link-to "application" classNames="navbar-brand"}}
    Erstifahrt Anmeldung
  {{/link-to}}

  {{#navbar.content}}
    {{#navbar.nav as |nav|}}

      {{#nav.item}}
        {{#nav.link-to 'students'}}
          {{fa-icon 'clipboard-check'}} Anmeldungen
        {{/nav.link-to}}
      {{/nav.item}}

      {{#nav.item}}
        {{#nav.link-to "application"}}
          {{fa-icon 'bus-alt'}} Aktuelle Fahrt
        {{/nav.link-to}}
      {{/nav.item}}

      {{#nav.item}}
        {{#bs-dropdown as |dd|}}

          {{#dd.toggle classNames="nav-link"}}
            {{fa-icon 'clipboard-list'}} Teilnehmerlisten <span class="caret"></span>
          {{/dd.toggle}}

          {{#dd.menu as |ddm|}}

            {{#ddm.item}}
              {{#ddm.link-to 'application'}}
                {{fa-icon 'accessible-icon' prefix='fab'}} Für den AStA
              {{/ddm.link-to}}
            {{/ddm.item}}

            {{#ddm.item}}
              {{#ddm.link-to 'application'}}
                {{fa-icon 'home'}} Für das Haus
              {{/ddm.link-to}}
            {{/ddm.item}}

          {{/dd.menu}}

        {{/bs-dropdown}}
      {{/nav.item}}

    {{/navbar.nav}}
  {{/navbar.content}}

  <div class="navbar-nav ml-auto animation-container">
    <span class="anim cloud"></span>
    <span class="anim bus"></span>
    <span class="anim sign"></span>
    <span class="anim house"></span>
  </div>

  {{#navbar.content classNames='logout'}}
    {{#navbar.nav classNames='ml-auto' as |nav|}}
      {{#nav.item}}
        {{#if session.isAuthenticated}}
          <a {{action 'invalidateSession'}}>
            {{fa-icon 'sign-out-alt'}} Logout
          </a>
        {{else}}
          {{#nav.link-to 'login'}}
            {{fa-icon 'sign-in-alt'}} Login
          {{/nav.link-to}}
        {{/if}}
      {{/nav.item}}

    {{/navbar.nav}}
  {{/navbar.content}}

{{/bs-navbar}}